---
//components
import Link from "./Link.astro";
import Logo from "./Logo.astro";
---

<footer>
    <div class="box">
        <img src="/gifs/solaire.gif" alt="praise the sun" id="solaire">
        <div class="bottom">
            <Logo extraClass="logo--large" boxClass="footer-logo"/>
            <div class="links">
                <Link href="https://www.instagram.com/giancwby" text="Instagram" target="_blank"/>
                <Link href="mailto:gcaedo.gc@gmail.com" text="E-mail" target="_blank"/>
            </div>
        </div>
    </div>
</footer>

<style is:global>
    .logo--large {
        width: 100% !important;
    }
</style>

<style>
    footer {
        @media (width > 1024px) {
            display: flex;
            justify-content: center;
        }

        .box {
            display: flex;
            flex-direction: column;
            gap: 80px;
            padding: 0px 20px 40px 20px;
            align-items: center;
            
            @media (width > 431px) {
                padding: 40px;
            }
            
            @media (width > 1024px) {
                width: 1280px;
                padding: 80px 80px 40px 80px;
            }

            >img {
                width: 210px;
                transform: translateX(-4px);
            }

            >.bottom {
                display: flex;
                flex-direction: column;
                gap: 40px;
                width: 100%;

                >.links {
                    display: flex;
                    justify-content: space-between;
                }
            }
        }
    }
</style>

<script>
    //@ts-nocheck
	const mobileQuery = window.matchMedia('(max-width: 431px)')

    if (mobileQuery.matches) {
        let tl = gsap.timeline({
            scrollTrigger: {
                trigger: "footer",
                start: "top 80%",
                end: "bottom bottom"
            },
            defaults: {ease:"expo.out"} 
        })
        tl.fromTo("#solaire", {y: 50, opacity: 0}, {y:0, opacity: 1})
        tl.fromTo(".footer-logo", {x: -100, opacity: 0}, {x:0, opacity: 1, duration: 1.5}, "<")
        tl.fromTo("footer > .box > .bottom > .links > *", {x: -100, opacity: 0}, {x:0, opacity: 1, duration: 1.5}, "<")
    }

    else {
        let tl = gsap.timeline({
            scrollTrigger: {
                trigger: "footer",
                start: "top 75%",
                end: "bottom bottom"
            },
            defaults: {ease:"power2.out"} 
        })
        tl.fromTo("#solaire", {y: 50, opacity: 0}, {y:0, opacity: 1, duration: 1})
        tl.fromTo(".footer-logo", {x: -200, opacity: 0}, {x:0, opacity: 1, duration: 1}, "<")
        tl.fromTo("footer > .box > .bottom > .links > *", {x: -100, opacity: 0}, {x:0, opacity: 1, duration: 1}, "<")
    }
</script>