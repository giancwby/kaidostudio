---
//components
import Layout from "../layouts/Layout.astro";
import Gallery from "../components/Gallery.astro";

const allProjects = await Astro.glob('../pages/projects/*.md')
---

<Layout title="Portfolio">
    <section>
        <div class="box">
            <h1>This could <br>be you</h1>
            <p class="body">Insert omegalul description. Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod </p>
            <Gallery/>
        </div>
    </section>
</Layout>

<style>
    section {
        @media (width > 1024px) {
            display: flex;
            justify-content: center;
        }

        >.box {
            display: flex;
            flex-direction: column;
            padding: 40px 20px;
            gap: 24px;
            align-items: center;

            @media (width > 431px) {
                padding: 80px 40px 80px 40px;
                gap: 40px;
            }

            @media (width > 1024px) {
                padding: 80px;
                width: 1280px;
            }
            
            >h1 {
                font-size: var(--h4);
                text-align: center;
                
                @media (width > 431px) {
                    font-size: var(--h2);
                    width: 100%;
                }

                >br {
                    @media (width > 1024px) {
                        display: none;
                    }
                }
            }

            >p {
                font-size: var(--large);
                text-align: center;

                @media (width > 1024px) {
                    width: 600px;
                }
            }
        }
    }
</style>